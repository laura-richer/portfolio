---
import Button from '@/atoms/Button.astro';
---

<div class="hero">
  <div class="hero__container container animate-section">
    <h1 class="h2 hero__title">
      I design and build beautiful responsive,<br />
      eCommerce and CMS driven websites.
    </h1>
    <h2 class="h3 hero__subtitle">I am a Frontend developer based in Leeds.</h2>
    <Button text="See more" link="#projects" />
  </div>
  <img
    src=""
    data-image="/images/hero.png"
    data-mobile-image="/images/hero-mobile.png"
    class="hero__image"
    alt="I design and build beautiful responsive, eCommerce and CMS driven websites."
  />
</div>

<script src="./hero.ts"></script>

<style lang="scss">
  .hero {
    position: relative;
    overflow: hidden;
    height: 80vh;
    color: var(--color-white);
    text-align: center;

    &__image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      animation: hero-animation 120s linear;
      object-fit: cover;
    }

    &__container {
      position: relative;
      z-index: 1;
      display: flex;
      height: 100%;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding-top: var(--header-height);
      padding-bottom: 0;
      gap: var(--spacer-m);
    }
  }

  @keyframes hero-animation {
    100% {
      transform: rotate(10deg) scale(1.5);
    }
  }
</style>
